
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container">
    <p class="btn btn-flat"><%= @list.bookmarks.size %></p>
    <h1><%= @list.name %></h1>
  </div>
</div>

<%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-flat" %>

<div class="d-flex">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card-trip flex-grow-1 m-3">
      <img src="https://image.tmdb.org/t/p/w500/<%= bookmark.movie.poster_url %>" />
      <div class="card-trip-infos">
        <div>
          <h2><%= bookmark.movie.title %></h2>
          <p><%= bookmark.movie.overview %></p>
        </div>
        <h2 class="card-trip-pricing"><%= bookmark.movie.rating %></h2>
      </div>
      <p><%= bookmark.comment %></p>
      <%= link_to bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Delete?"} do %>
        <i class="fa-solid fa-trash-can"></i> Delete
      <% end %>
    </div>
  <% end %>
</div>